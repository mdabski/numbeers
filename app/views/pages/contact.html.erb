<h1>Contact</h1>
<% if @success %>
  Thank you for contacting us!
<% else %>
  <p>

    <%= form_tag do %>

      <div class="field">
        <%= label_tag :name, "Name" %><br>
        <%= text_field_tag :name %>
      </div>

      <div class="field">
        <%= label_tag :email, "E-mail" %><br>
        <%= text_field_tag :email %>
      </div>

      <div class="field">
        <%= label_tag :message %><br>
        <%= text_area_tag :message %>
      </div>

      <div class="field">
        <%= submit_tag "Submit" %>
      </div>

    <% end %>

  </p>
<% end %>