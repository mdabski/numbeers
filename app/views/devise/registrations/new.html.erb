<h2>Sign Up</h2>
<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  
  <div><%= f.label :first_name %>
    <%=text_field_tag "contact[first_name]" ,@contact.first_name %></div>
  
  <div><%= f.label :last_name %>
    <%=text_field_tag "contact[last_name]" ,@contact.last_name %></div>

  <div><%= f.label :phone_number %>
    <%=telephone_field_tag "contact[phone_number]" ,@contact.phone_number %></div>

  <%= f.submit "Sign up", :class => "btn btn-primary btn-large"%>
<% end %>