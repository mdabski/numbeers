<%= form_for @keg, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :size, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :size, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :start_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :end_date, :include_blank => true, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :beer_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:beer_id, Beer.all, :id, :name) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                kegs_path, :class => 'btn' %>
  </div>
<% end %>
