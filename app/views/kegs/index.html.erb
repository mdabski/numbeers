<h1>Listing kegs</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th>Price</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Beer</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @kegs.each do |keg| %>
      <tr>
        <td><%= keg.size %></td>
        <td><%= keg.price %></td>
        <td><%= keg.start_date %></td>
        <td><%= keg.end_date %></td>
        <td><%= keg.beer.name %></td>
        <td><%= link_to 'Show', keg %></td>
        <td><%= link_to 'Edit', edit_keg_path(keg) %></td>
        <td><%= link_to 'Destroy', keg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

