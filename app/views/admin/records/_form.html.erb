<%= form_for [:admin, @record], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :contact_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:contact_id, Contact.where(active: true), :id, :full_name) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_records_path, :class => 'btn' %>
  </div>
<% end %>
